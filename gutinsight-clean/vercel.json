{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "backend/src/main.py": {
      "runtime": "python3.9"
    }
  },
  "env": {
    "OPENAI_API_KEY": "@openai_api_key",
    "STRIPE_PUBLISHABLE_KEY": "@stripe_publishable_key", 
    "STRIPE_SECRET_KEY": "@stripe_secret_key"
  }
}

